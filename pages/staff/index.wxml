<refresh-view id='refreshView' bind:onRefresh="onPullDownRefresh"/>
<form bindsubmit="formSubmit" report-submit="true">
  <view class='title'>内部人员信息录入</view>
  <van-cell-group>
    <van-field value="{{form.SName}}" name="SName" label="姓名" maxlength="{{maxlengthSName}}" placeholder="请填写您的姓名" clearable border="{{ false }}"/>
    <picker name="SSex" value="{{form.SSex}}" range="{{sex_array}}" bindchange="bindSexPickerChange">
      <view class="picker">
        <label class='label'>访客性别</label><text class='text'>{{sex_array[form.SSex]}}</text>
      </view>
    </picker>
    <van-field value="{{form.SMPhone}}" name="SMPhone" label="手机号" placeholder="请填写您的手机号(账号)" clearable border="{{ false }}" maxlength="{{maxlengthPhone}}"/>
    
    <van-field value="{{form.SDDetailName}}" name="SDDetailName" label="部门" placeholder="请填写您所在部门" clearable border="{{ false }}"/>
    <van-field value="{{form.SInitialPassword}}" name="SInitialPassword" label="设置密码" placeholder="请设置密码" clearable border="{{ false }}"  type="password"/>
  </van-cell-group>
  <view class='wings_blank mt-20'>
    <view class="red">请准确填写信息</view>
    <view class="placeholder10"></view>
    <button class='submit' type="primary" formType="submit" size='default'> 添 加 </button>
  </view>
</form >
