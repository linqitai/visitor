<scroll-view class="list" scroll-y="true" lower-threshold="50" scroll-top="{{scrollTop}}" scroll-y="true" bindscrolltoupper="scrollToUpper">
  <navigator class='item' wx:for="{{dataList}}" wx:for-index="index" wx:key="index">
    <view class='line'>
      <label class="left">姓名：{{item.SName}}</label><label class='right'>性别：{{item.SSex==0?'男':'女'}}</label>
    </view>
    <view class='line'>
      <label class="left">部门：{{item.SDDetailName}}</label><label class='right'>手机号：{{item.SMPhone}}</label>
    </view>
  </navigator>
  <view class="title-footer" wx:if="{{count>0}}">
    <text class="f-24 col-9 cont">数据加载完毕</text>
  </view>
</scroll-view>
